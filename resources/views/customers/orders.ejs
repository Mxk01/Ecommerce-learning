<%- include('../partials/header'); %>
<%- include('../partials/navbar'); %>

<% if(success_msg){ %>

<p><%=success_msg%></p>

<% } else{ %>

  <p><%=error_msg%></p>

<% } %>

<!-- Checking if orders array that we got from Order.find({customerId:req.user._id}) is empty -->
<% if(orders.length){ %>
<table class="table">
  <thead>
    <tr>
      <th scope="col">No #</th>
      <th scope="col">Customer ID</th>
      <th scope="col">Customer Address</th>
      <th scope="col">Time placed</th>
    </tr>
  </thead>
  <tbody>
    <% i=0; %>
    <% orders.forEach((order)=>{ %>
    <tr>
      <th scope="row"><% i++ %><%=i%></th>
      <td><%=order._id %></td>
      <td><%=order.address %></td>
      <td><%=moment(order.createdAt).format('hh:mm: A') %></td>
    </tr>
   <% }) %>
  </tbody>
</table>
<% } else { %>
<p>No orders have been placed</p>
<% } %>
